extends ../layouts/main-layout

include ../mixin/switchSeasons

block css
        link(rel='stylesheet' href="/css/classes.css")

block content
        .row(style='margin-bottom: 80px')
                .col-12.pt-4.card.my-4.shadow
                        .card-body.pt-0.pb-4
                                .d-flex.justify-content-between
                                        .d-flex
                                                h3.mb-0 Sınıflar
                                        div
                                                button.btn.btn-primary(type='button') Dönem Ekle
                                                button.ml-2.btn.btn-primary.AddClasses(type='button') Sınıf Ekle
                                                button.ml-2.btn.btn-danger(type='button') Sınıf Sil
                                hr.mt-3
                                #AddClassesPanel.modal(style="display:none;")
                                        .modal-dialog
                                                .modal-content
                                                        .modal-header.text-center
                                                                h5.modal-title.w-100(style='margin-right: -35px;') Sınıf Ekle
                                                                button.close(type='button', data-dismiss='modal', aria-label='Close')
                                                                        span(aria-hidden='true') ×
                                                        .modal-body.text-center
                                                                p
                                                                        strong.mr-1 Dönem: |  2019 / 2020
                                                                form.form-inline.justify-content-center(method='POST', action='')
                                                                        .form-group.mb-2
                                                                                label Bir Sınıf İsmi Yazınız:
                                                                        .form-group.mx-sm-3.mb-2
                                                                                input#inputPassword2.form-control(type='text', placeholder='Sınıf İsmi')
                                                                        button.btn.btn-primary.mb-2(type='submit') Ekle
                                +listSeason()
                                
                                //.classes.d-flex.flex-wrap.mt-3
                                        .card.single-class.bg-light.col-4
                                                .card-body.d-flex.align-items-center.justify-content-center.flex-column
                                                        h4.card-title.text-center

                                                        // a(href="/ogrenciler").mt-2.w-50.btn.btn-primary Sınıfa Bak
                                
                                .alert.alert-warning.mt-3
                                        strong Henüz Burada Bir Sınıf Bulamadık
                                        br
                                        small Sınıfları görüntülemek için dönem seçiniz, eğer dönem seçtikten sonra 


block script
        script(src="/js/addClasses.js")