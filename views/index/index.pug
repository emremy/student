extends ../layouts/main-layout

include ../mixin/switchSeasons

include ../mixin/listClasses

block css
        link(rel='stylesheet' href="/css/classes.css")

block content
        .row(style='margin-bottom: 80px')
                .col-12.pt-4.card.my-4.shadow
                        .card-body.pt-0.pb-4
                                .d-flex.justify-content-between
                                        .d-flex
                                                h3.mb-0 Sınıflar
                                        div
                                                button.btn.btn-primary.addSeasonPanelOpen(type='button') Dönem Ekle
                                                button.ml-2.btn.btn-primary.AddClasses(type='button') Sınıf Ekle
                                                button.ml-2.btn.btn-danger.DeleteClassPanelOpen(type='button') Sınıf Sil
                                hr.mt-3
                                include buttonProperty/addClass.pug
                                include buttonProperty/addSeason.pug
                                include buttonProperty/deleteClass.pug
                                +bigListSeason()
                                
                                +listClasses(classes)
                                
                                .alert.alert-warning.mt-3
                                        strong Henüz Burada Bir Sınıf Bulamadık
                                        br
                                        small Sınıfları görüntülemek için dönem seçiniz, eğer dönem seçtikten sonra 


block script
        script(src="/js/buttonRequest/addClasses.js")
        script(src="/js/buttonRequest/addSeason.js")
        script(src="/js/buttonRequest/deleteClass.js")
        script(src="/js/selectRequest/switchSeasons.js")