extends ../layouts/main-layout.pug

include ../mixin/listAllStudent.pug

block css
        link(rel='stylesheet' href="/css/allStudents.css")
block content

        .row(style='margin-bottom: 60px;')
            .col-12.pt-4.card.my-4.shadow
                .card-body.pt-0
                    .d-flex.justify-content-between
                        .d-flex
                            router-link.btn.btn-light.mr-3.px-2(style='line-height: 0px;')
                                    i.fa.fa-angle-left
                            h3.mb-0.class-name 3/A Sınıfının Öğrencileri (#{students.length})

                        button.btn.btn-primary(type='button') Öğrenci Ekle
                    hr.mt-3
                    table.table.table-hover.table-striped.table-bordered
                        thead
                            tr
                                    th
                                        strong #
                                    th Adı Soyadı:
                                    th TC Kimlik No:
                                    th Anne Adı
                                    th Baba Adı
                                    th 3.Kişi Tel
                                    th.text-center Aidatlar
                        tbody
                            +listAllStudent(students)
                    .d-none.alert.alert-warning
                        strong Henüz Burada Bir Öğrenci Bulamadık
                        br
                        small
                        | Öğrenci Eklemek için sağ üstteki Öğrenci Ekle butonunu kullanabilirsiniz



